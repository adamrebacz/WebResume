@model WebResume.Models.Section

    <form id="SectionForm" method="POST">
        <div class="text-danger"></div>
        <input id="SectionId" type="hidden" asp-for="@Model.Id" />

        <div class="form-group row">
            <label asp-for="@Model.Name" class="col-3 col-form-label" for="InputName"></label>
            <div class="col-8">
                <input id="InputName" asp-for="@Model.Name" name="InputName" type="text" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-4 col-form-label" for="select">Visibility</label>
            <div class="col-8">
                <select id="select" disabled name="select" class="custom-select">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-9">
                <input type="button" id="btnSectionDeleteConfirm" value="Save" class="btn btn-info">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </form>