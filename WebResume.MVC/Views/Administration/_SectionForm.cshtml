@model WebResume.Models.Section

    <form id="SectionForm" method="POST">
        <div class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <div class="form-group row">
            <label asp-for="@Model.Name" class="col-3 col-form-label" for="InputName"></label>
            <div class="col-9">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="fa fa-address-card"></i>
                        </div>
                    </div>
                    <input asp-for="@Model.Name" id="InputName" name="InputName" type="text" required="required" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-3 col-9">
                <input type="button" id="btnSubmit" value="Save" class="btn btn-info">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </form>